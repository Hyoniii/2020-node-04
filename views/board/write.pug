extends ../layout/default.pug
block content
    .jumbotron
        if list
            h1 게시글 수정
            small (update)
        else   
            h1 게시글 작성
            small (write)
    .container
        form(action="/board/save" name="wrForm" method="post" onsubmit="return onSubmit(this);")
            if list
                input(type="hidden" name="id" value=`${list.id}`)
             
            ul.wr-lists
                li.wr-list.d-flex
                    .title.p-3.bg-dark.text-light 제목
                    .content.p-1
                        input.form-control(type="text" placeholder="제목을 작성해주세요." name="title" value=`${list? list.title : ""}`)
                li.wr-list.d-flex
                    .title.p-3.bg-dark.text-light 작성자
                    .content.p-1
                        input.form-control(type="text" placeholder="작성자를 입력해주세요." name="writer" value=`${list? list.title : ""}`)
                li.wr-list.d-flex
                    .title.p-3.bg-dark.text-light 내용
                    .content.p-1
                    if list
                        textarea.form-control(placeholder="내용을 입력해주세요." name="comment")=list.comment
                    else
                        textarea.form-control(placeholder="내용을 입력해주세요." name="comment")

                li.text-center.p-5
                    if list 
                        button.btn.btn-success 수정
                    else
                        button.btn.btn-success 저장

                    button(type="reset").btn.btn-danger 다시작성
            